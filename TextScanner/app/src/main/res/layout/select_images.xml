<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="0dp">

    <ImageView
        android:id="@+id/singleImage"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/deleteImage"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@color/background"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/singleImage"
        />

    <TextView
        android:id="@+id/imageCountText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C0C0C0"
        android:paddingLeft="5dp"
        android:text="1"
        android:textColor="#31657C"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/singleImage"
        app:layout_constraintStart_toStartOf="@+id/singleImage"
        app:layout_constraintTop_toBottomOf="@+id/singleImage" />

</androidx.constraintlayout.widget.ConstraintLayout>