<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PdfViewer"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/backButton"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:backgroundTint="#FFFFFF"
            android:drawableLeft="@drawable/baseline_arrow_back_24"
            android:onClick="ImagesForPdf" />

        <Button
            android:id="@+id/docCreateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:backgroundTint="#FFFFFF"
            android:onClick="createDocFile"
            android:text="Create doc"
            android:textColor="#142725"
            android:textSize="20sp" />
        <Button
            android:id="@+id/buttonEn2"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:layout_marginLeft="10dp"
            android:text="En"
            android:onClick="EnglishText2"
            android:textSize="18sp"
            android:textColor="#000000" />

        <Button
            android:id="@+id/buttonBn2"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:text="Bn"
            android:onClick="BanglaText2"
            android:textSize="16sp"
            android:textColor="#000000" />

    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pdfRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>

</LinearLayout>